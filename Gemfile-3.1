source 'https://rubygems.org'

git "git://github.com/middleman/middleman.git", :branch => "master" do
  gem "middleman"
  gem "middleman-core"
  gem "middleman-more"
end

# Specify your gem's dependencies in middleman-sprockets.gemspec
gemspec

# Build and doc tools
gem "rake",     "~> 10.0.3"
gem "yard",     "~> 0.8.0"

# Test tools
gem "cucumber" 
gem "fivemat"
gem "aruba"
gem "rspec"
gem 'gherkin'

# For actual tests
