# so they don't cause asset hashes to change.
gem "jquery-rails", '2.2.1', :require => false
gem "bootstrap-sass", '2.3.1.0', :require => false
gem "ejs", "~> 1.1.1"
gem "eco", "~> 1.0.0"
gem "erubis", "~> 2.7.0"
gem 'jquery_mobile_rails', '1.2.0', :require => false